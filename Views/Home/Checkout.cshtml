@{
    ViewData["Title"] = "Thanh toán";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<section id="center" class="p_3 bg_light">
 <div class="container-xl">
  <div class="row center_1">
   <div class="col-md-12">
     <h6 class="font_14"><a href="#">Trang chủ</a>  <span class="mx-2">/</span>  <span class="col_red">Thanh toán</span></h6>
	 <h2 class="mb-0 mt-3 lh-1">Thanh toán</h2>
   </div>
  </div>
 </div>
</section>

<section id="checkout" class="p_3">
 <div class="container-xl">
  <div class="checkout_1 row">
    <div class="col-md-8">
	  <div class="checkout_1l">
	   <h5>Thông tin của bạn</h5>
	   <p>Hãy kiểm tra thật kĩ thông tin trước khi đặt hàng</p>
	  </div>
	  <div class="checkout_1l1 row">
		<div class="col-md-12 ps-0">
	    <h6>Họ tên của bạn</h6>
		<input class="form-control" type="text">
		</div>
	  </div>
	  <div class="checkout_1l1 row">	
       <div class="col-md-6 ps-0">
	    <h6>Email <span></span></h6>
		<input class="form-control" type="text">
	   </div>
	   <div class="col-md-6 ps-0">
	    <h6>Số điện thoại <span></span></h6>
		<input class="form-control" type="text">
	   </div>
	  </div>
	  <div class="checkout_1l1 row">
       <div class="col-md-12 ps-0">
	    <h6>Địa chỉ <span></span></h6>
		<input class="form-control" type="text">
	   </div>
	  </div>

	  <div class="checkout_1l">
	   <div class="form-check">
        <label class="form-check-label" for="customCheck1"><a href="#">Thông tin bị sai? Thay đổi tại đây.</a></label>
    </div>
	  </div>
	</div>
	 <div class="col-md-4">
       <div class="checkout_1r">
	     <h5>Tổng Giỏ Hàng</h5>
	     <hr class="line">
		<h6>Tổng đơn hàng <span class="pull-right">$230.00</span></h6>
		<h6>(+) Phí vận chuyển <span class="pull-right">$20.00</span></h6>
		<hr>
		<h6 class="fw-bold font_13">Tổng thanh toán <span class="pull-right">$250.00</span></h6><br>
		 <h5>Phương thức thanh toán</h5>
	     <hr class="line">

		 <div class="form-check mt-2">
        <label class="form-check-label" for="customCheck1">Thanh toán khi đã giao hàng</label>
    </div>

		 <h6 class="mt-3"><button data-bs-toggle="modal"
			data-bs-target="#addRowModal" class="button">Tiến hành thanh toán</button></h6>
		 <!-- form xac nhan -->
		 <div class="modal fade" id="addRowModal" tabindex="-1" aria-labelledby="newRowModalLabel" aria-hidden="true">
			<div class="modal-dialog modal-dialog-centered">
			  <div class="modal-content">
				<div class="modal-header">
				  <h5 class="modal-title" id="newRowModalLabel">Xác nhận thanh toán</h5>
				  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
				  <form action="">
					<div class="mb-3">
					  <label for="name" class="form-label">Số điện thoại</label>
					  <input type="text" class="form-control" id="name" placeholder="Nhập tên" disabled>
					</div>
					<div class="mb-3">
					  <label for="position" class="form-label">Địa chỉ</label>
					  <input type="text" class="form-control" id="position" placeholder="Nhập vị trí" disabled>
					</div>
				 
				<div class="modal-footer">
				  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
				  <button type="submit" class="btn btn-primary">Xác nhận</button>
				</div>
			  </form>
			  </div>
			</div>
		  </div>


	   </div>
	  </div>
   </div>
 </div>
</section>