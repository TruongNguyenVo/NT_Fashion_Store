@{
	ViewData["Title"] = "Chi tiết sản phẩm";
	var product = ViewBag.product as doan1_v1.Models.Product;
	Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<section id="center" class="p_3 bg_light">
	<div class="container-xl">
		<div class="row center_1">
			<div class="col-md-12">
				<h6 class="font_14"><a asp-action="Index" asp-controller="Home">Trang chủ</a>  <span class="mx-2">/</span>  <span class="col_red">Chi tiết sản phẩm</span></h6>
				<h2 class="mb-0 mt-3 lh-1">Chi tiết sản phẩm</h2>
			</div>
		</div>
	</div>
</section>

<section id="list" class="p_3">
	<div class="container-xl">
		<div class="row list_1">
			<div class="col-md-9">
				<div class="list_1d">
					<div class="shop_dt1 row">
						<div class="col-md-6">
							<div class="shop_dt1l">
								<div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
									<div class="carousel-indicators">
										<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-label="Slide 1"></button>
										<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2" class="" aria-current="true"></button>
										<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3" class=""></button>
									</div>

									<div class="carousel-inner">
										@for(int i = 0; i < @product.ProductImages.Count; i++)
										{
											if(i == 0)
											{
												<div class="carousel-item active">
													<img src="@product.ProductImages[i].ImgURL" class="d-block w-100" alt="abc" height="470px" width="410px">
												</div>
											}
											else
											{
												<div class="carousel-item">
													<img src="@product.ProductImages[i].ImgURL" class="d-block w-100" alt="abc" height="470px" width="410px">
												</div>
											}
										}

									</div>
									<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
										<span class="carousel-control-prev-icon" aria-hidden="true"></span>
										<span class="visually-hidden">Trước</span>
									</button>
									<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
										<span class="carousel-control-next-icon" aria-hidden="true"></span>
										<span class="visually-hidden">Sau</span>
									</button>
								</div>
							</div>
						</div>
						<div class="col-md-6">
							<div class="shop_dt1r">
								<h2>@product.Category.Name</h2>
								<h4 class="mt-3">@product.Price VND</h4>
								<h5 class="mt-4 mb-4">@product.Name</h5>
								<input type="number" min="1" value="1" class="form-control bg_light float-start me-3 rounded-0" placeholder="Qty" style="width:80px; height:50px;">
								<select class="form-select bg_light float-start me-3 rounded-0" style="width:80px; height:50px;">
									<option value="" selected>Size</option>
									<option>@product.Dimension</option>
								</select>
								<h6 class="text-uppercase fw-bold d-inline-block"><a class="button" href="#">Thêm vào giỏ hàng</a></h6>
								<h6 class="mt-3 font_14 text-uppercase"><span class="fw-bold">Màu</span>  :  </h6>
								<h6 class="mt-3 font_14 text-uppercase"><span class="fw-bold">Chất liệu</span>  : @product.Material.</h6>
								<h6 class="mt-3 font_14 text-uppercase"><span class="fw-bold">Sản xuất</span>  : @product.Productor.</h6>
								<br>
								<p>@product.Description</p>
							</div>
						</div>
					</div>
					<br><br>

					<div class="row shop_dt4 mt-4">
						<h3 class="mb-0">Sản phẩm tương tự</h3>
						<div class="row list_2 mt-3">
							@foreach(var relativeProduct in ViewBag.relativeProducts){
							<div class="col-md-4 col-sm-6">
								<div class="list_2i clearfix position-relative">
									<div class="list_2i1 clearfix">
										<div class="grid clearfix">
											<figure class="effect-jazz mb-0">
												@foreach(var img in relativeProduct.ProductImages){
												<a asp-action="Detail" asp-route-id="@relativeProduct.Id" asp-controller="Home">
													<img src="@img.ImgURL" class="w-100" alt="abc">
														</a>
														break;
													}
											</figure>
										</div>
									</div>

									<div class="list_2i3 text-end w-100  clearfix position-absolute bottom-0">
										<ul class="mb-0 bg_dark d-inline-block p-2 px-3">
												<li class="d-inline-block mx-1"><a asp-action="Detail" asp-route-id="@relativeProduct.Id" asp-controller="Home"><i class="fa fa-eye text-white"></i></a></li>
												<li class="d-inline-block mx-1"><a asp-action="Detail" asp-route-id="@relativeProduct.Id" asp-controller="Home"><i class="fa fa-shopping-bag text-white"></i></a></li>
										</ul>
									</div>
								</div>
								<div class="list_2i_last mt-3 text-center clearfix">
										<h6 class="fw-bold"><a asp-action="Detail" asp-route-id="@relativeProduct.Id" asp-controller="Home">@relativeProduct.Name</a></h6>
										<h6 class="font_14 mb-0"><a asp-action="Detail" asp-route-id="@relativeProduct.Id" asp-controller="Home">@relativeProduct.Price VND</a></h6>
								</div>
							</div>
							}
						</div>
					</div>
				</div>
			</div>
			<div class="col-md-3">
				<div class="list_1r">
					<div class="list_1r1 shadow_box p-3 mt-4">
						<h5 class="mb-3">Danh mục sản phẩm</h5>
						@foreach (var category in ViewBag.categories){

							<h6 class="font_14"><a asp-action="Shop" asp-route-id="@category.Id" asp-controller="Home">@category.Name</a></h6>
						}
					</div>
					<div class="list_1r1 shadow_box p-3 mt-4">
						<h5 class="mb-3">Sản phẩm bán chạy</h5>
						<div class="list_1r1i row">
							<div class="col-md-4 pe-0 col-sm-4">
								<div class="list_1r1il">
									<div class="grid clearfix">
										<figure class="effect-jazz mb-0">
											<a href="detail.html"><img src="img/9.jpg" class="w-100" alt="abc"></a>
										</figure>
									</div>
								</div>
							</div>
							<div class="col-md-8 col-sm-8">
								<div class="list_1r1ir">
									<h6 class="fw-bold mb-1 font_12"><a href="detail.html">Quần Jean Nam Taper Fit MJE 1019</a></h6>
									<h6 class="mb-0 mt-1 font_12 fw-bold">98 VND</h6>
								</div>
							</div>
						</div><hr>
						<div class="list_1r1i row">
							<div class="col-md-4 pe-0 col-sm-4">
								<div class="list_1r1il">
									<div class="grid clearfix">
										<figure class="effect-jazz mb-0">
											<a href="detail.html"><img src="img/9.jpg" class="w-100" alt="abc"></a>
										</figure>
									</div>
								</div>
							</div>
							<div class="col-md-8 col-sm-8">
								<div class="list_1r1ir">
									<h6 class="fw-bold mb-1 font_12"><a href="detail.html">Quần Jean Nam Taper Fit MJE 1019</a></h6>
									<h6 class="mb-0 mt-1 font_12 fw-bold">98 VND</h6>
								</div>
							</div>
						</div><hr>
						<div class="list_1r1i row">
							<div class="col-md-4 pe-0 col-sm-4">
								<div class="list_1r1il">
									<div class="grid clearfix">
										<figure class="effect-jazz mb-0">
											<a href="detail.html"><img src="img/9.jpg" class="w-100" alt="abc"></a>
										</figure>
									</div>
								</div>
							</div>
							<div class="col-md-8 col-sm-8">
								<div class="list_1r1ir">
									<h6 class="fw-bold mb-1 font_12"><a href="detail.html">Quần Jean Nam Taper Fit MJE 1019</a></h6>
									<h6 class="mb-0 mt-1 font_12 fw-bold">98 VND</h6>
								</div>
							</div>
						</div><hr>
					</div>
					<div class="list_1r1  mt-4">
					</div>
					<div class="list_1r1 shadow_box p-3 mt-4">
						<h5 class="mb-3">Liên hệ</h5>
						<div class="input-group">
							<input type="text" class="form-control border-0 rounded-0 font_12 bg-transparent" placeholder="Email của bạn">
							<span class="input-group-btn">
								<button class="btn btn-primary bg-transparent border-0 rounded-0" type="button">
									<i class="fa fa-envelope col_red"></i>
								</button>
							</span>
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>
</section>