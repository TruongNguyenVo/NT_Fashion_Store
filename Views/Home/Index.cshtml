<section id="list" class="p_3 bg_light">
	<div class="container-xl">
		<div class="row list_1 text-center mb-4">
			<div class="col-md-12">
				<h6 class="font_14 col_red fw-bold">Bộ sưu tập đặc biệt</h6>
				<h2 class="mt-3">Mua sắm mỗi ngày</h2>
				<p class="mb-0 mt-3">Bạn đã sẵn sàng để bất ngờ? Bộ sưu tập đặc biệt sẽ mang đến cho bạn những trải nghiệm thời trang hoàn toàn mới lạ. <br> Sự kết hợp hoàn hảo giữa truyền thống và hiện đại sẽ khiến bạn không thể rời mắt</p>
			</div>
		</div>
		<div class="row list_2">
			 @* 4 san pham ao *@
			@foreach(var product in ViewBag.productAos){
			<div class="col-md-3 col-sm-6">
				<div class="list_2i clearfix position-relative">
					<div class="list_2i1 clearfix">
						<div class="grid clearfix">
							<figure class="effect-jazz mb-0">
								<a asp-action="Detail" asp-route-id="@product.Id" asp-controller="Home">
									@foreach(var img in product.ProductImages){
											<img src="@img.ImgURL" width="270" height="370" class="w-100" alt="abc">
											break;
										}
									</a>
							</figure>
						</div>
					</div>

					<div class="list_2i3 text-end w-100  clearfix position-absolute bottom-0">
						<ul class="mb-0 bg_dark d-inline-block p-2 px-3">
								<li class="d-inline-block mx-1"><a asp-action="Detail" asp-route-id="@product.Id" asp-controller="Home"><i class="fa fa-eye text-white"></i></a></li>
@* 								<li class="d-inline-block mx-1"><a asp-action="Detail" asp-route-id="@product.Id" asp-controller="Home"><i class="fa fa-shopping-bag text-white"></i></a></li> *@
						</ul>
					</div>
				</div>
				<div class="list_2i_last mt-3 text-center clearfix">
					<h6 class="fw-bold"><a asp-action="Detail" asp-route-id="10" asp-controller="Home">@product.Name</a></h6>
						<h6 class="font_14 mb-0"><a asp-action="Detail" asp-route-id="@product.Id" asp-controller="Home">@product.Price.ToString("N0") VND</a></h6>
				</div>
			</div>
			}
		</div>
		<br><br>
		<div class="row list_2">
			@* 4 san pham quan *@
			@foreach (var product in ViewBag.ProductQuans)
			{
				<div class="col-md-3 col-sm-6">
					<div class="list_2i clearfix position-relative">
						<div class="list_2i1 clearfix">
							<div class="grid clearfix">
								<figure class="effect-jazz mb-0">
									<a asp-action="Detail" asp-route-id="@product.Id" asp-controller="Home">
										@foreach (var img in product.ProductImages)
										{
											<img src="@img.ImgURL" width="270" height="370" class="w-100" alt="abc">
											break;
										}
									</a>
								</figure>
							</div>
						</div>

						<div class="list_2i3 text-end w-100  clearfix position-absolute bottom-0">
							<ul class="mb-0 bg_dark d-inline-block p-2 px-3">
								<li class="d-inline-block mx-1"><a asp-action="Detail" asp-route-id="@product.Id" asp-controller="Home"><i class="fa fa-eye text-white"></i></a></li>
	@* 							<li class="d-inline-block mx-1"><a asp-action="Detail" asp-route-id="@product.Id" asp-controller="Home"><i class="fa fa-shopping-bag text-white"></i></a></li> *@
							</ul>
						</div>
					</div>
					<div class="list_2i_last mt-3 text-center clearfix">
						<h6 class="fw-bold"><a asp-action="Detail" asp-route-id="10" asp-controller="Home">@product.Name</a></h6>
						<h6 class="font_14 mb-0"><a asp-action="Detail" asp-route-id="@product.Id" asp-controller="Home">@product.Price.ToString("N0") VND</a></h6>
					</div>
				</div>
			}
		</div>

		</div>
	</div>
</section>

<section id="spec">
	<div class="spec_m">
		<div class="container-xl">
			<div class="row spec_1 text-center">
				<div class="col-md-12">
