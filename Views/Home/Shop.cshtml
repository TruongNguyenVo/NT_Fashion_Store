									<li><a class="act" asp-action="Detail" asp-controller="Home">1</a></li>
									<li><a asp-action="Detail" asp-controller="Home">2</a></li>
									<li><a asp-action="Detail" asp-controller="Home">3</a></li>
									<li><a asp-action="Detail" asp-controller="Home">4</a></li>
									<li><a asp-action="Detail" asp-controller="Home">5</a></li>
									<li><a asp-action="Detail" asp-controller="Home">6</a></li>
									<li><a asp-action="Detail" asp-controller="Home"><i class="fa fa-chevron-right"></i></a></li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col-md-3">
				<div class="list_1r">
					<div class="input-group">
						<input type="text" class="form-control border-0 rounded-0 font_12 bg-transparent" placeholder="Nhập tên sản phẩm">
						<span class="input-group-btn">
							<button class="btn btn-primary bg-transparent border-0 rounded-0" type="button">
								<i class="fa fa-search col_red"></i>
							</button>
						</span>
					</div>
					<div class="list_1r1 shadow_box p-3 mt-4">
