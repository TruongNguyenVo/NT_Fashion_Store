@{
	ViewData["Title"] = "Cửa hàng";
	Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<section id="list" class="p_3">
	<div class="container-xl">
		<div class="row list_1">
			<div class="col-md-9">
				<div class="list_1l">
					<div class="list_1l1">
						<div class="list_1l1i row">
							<div class="col-md-8 col-sm-7">
								<div class="list_1l1il">
									<p class="font_14 mb-0">Hiển thị 1–12 trong tổng @ViewBag.products.Count sản phẩm</p>
								</div>
							</div>
						</div>
					</div>
					<div class="list_1l2 mt-3">
						@for(int i = 0; i < ViewBag.products.Count; i+=3){
						<div class="row list_2">
							
							<div class="col-md-4 col-sm-6">
								<div class="list_2i clearfix position-relative">
									<div class="list_2i1 clearfix">
										<div class="grid clearfix">
											<figure class="effect-jazz mb-0">
												<a asp-action="Detail" asp-controller="Home">
														<img src="@ViewBag.products[i].ProductImages[0].ImgURL" class="w-100" alt="abc">
													</a>
											</figure>
										</div>
									</div>

									<div class="list_2i3 text-end w-100  clearfix position-absolute bottom-0">
										<ul class="mb-0 bg_dark d-inline-block p-2 px-3">
												<li class="d-inline-block mx-1"><a asp-action="Detail" asp-route-id="@ViewBag.products[i].Name" asp asp-controller="Home"><i class="fa fa-eye text-white"></i></a></li>
											<li class="d-inline-block mx-1"><a asp-action="Detail" asp-controller="Home"><i class="fa fa-shopping-bag text-white"></i></a></li>
										</ul>
									</div>
								</div>
								<div class="list_2i_last mt-3 text-center clearfix">
									<h6 class="fw-bold"><a asp-action="Detail" asp-controller="Home">@ViewBag.products[i].Name</a></h6>
									<h6 class="font_14 mb-0"><a asp-action="Detail" asp-controller="Home">125 VND</a></h6>
								</div>
							</div>
							<br><br>
							@if(i+1 < ViewBag.products.Count){
							<div class="col-md-4 col-sm-6">
									<div class="list_2i clearfix position-relative">
										<div class="list_2i1 clearfix">
											<div class="grid clearfix">
												<figure class="effect-jazz mb-0">
													<a asp-action="Detail" asp-controller="Home">
														<img src="@ViewBag.products[i+1].ProductImages[0].ImgURL" class="w-100" alt="abc">
													</a>
												</figure>
											</div>
										</div>

										<div class="list_2i3 text-end w-100  clearfix position-absolute bottom-0">
											<ul class="mb-0 bg_dark d-inline-block p-2 px-3">
												<li class="d-inline-block mx-1"><a asp-action="Detail" asp-route-id="@ViewBag.products[i+1].Name" asp asp-controller="Home"><i class="fa fa-eye text-white"></i></a></li>
												<li class="d-inline-block mx-1"><a asp-action="Detail" asp-controller="Home"><i class="fa fa-shopping-bag text-white"></i></a></li>
											</ul>
										</div>
									</div>
									<div class="list_2i_last mt-3 text-center clearfix">
										<h6 class="fw-bold"><a asp-action="Detail" asp-controller="Home">@ViewBag.products[i+1].Name</a></h6>
										<h6 class="font_14 mb-0"><a asp-action="Detail" asp-controller="Home">125 VND</a></h6>
									</div>
								</div>
							<br><br>
								}
								@if (i+2 < ViewBag.products.Count)
								{
							<div class="col-md-4 col-sm-6">
									<div class="list_2i clearfix position-relative">
										<div class="list_2i1 clearfix">
											<div class="grid clearfix">
												<figure class="effect-jazz mb-0">
													<a asp-action="Detail" asp-controller="Home">
														<img src="@ViewBag.products[i+2].ProductImages[0].ImgURL" class="w-100" alt="abc">
													</a>
												</figure>
											</div>
										</div>

										<div class="list_2i3 text-end w-100  clearfix position-absolute bottom-0">
											<ul class="mb-0 bg_dark d-inline-block p-2 px-3">
												<li class="d-inline-block mx-1"><a asp-action="Detail" asp-route-id="@ViewBag.products[i+2].Name" asp asp-controller="Home"><i class="fa fa-eye text-white"></i></a></li>
												<li class="d-inline-block mx-1"><a asp-action="Detail" asp-controller="Home"><i class="fa fa-shopping-bag text-white"></i></a></li>
											</ul>
										</div>
									</div>
									<div class="list_2i_last mt-3 text-center clearfix">
										<h6 class="fw-bold"><a asp-action="Detail" asp-controller="Home">@ViewBag.products[i+2].Name</a></h6>
										<h6 class="font_14 mb-0"><a asp-action="Detail" asp-controller="Home">125 VND</a></h6>
									</div>
								</div>
								}
							</div>
								<br>
						}

