@{
	ViewData["Title"] = "Cửa hàng";
	Layout = "~/Views/Shared/_LayoutUser.cshtml";
	var products = ViewBag.products as doan1_v1.Helpers.PaginatedList<Product>;
}
<section id="list" class="p_3">
	<div class="container-xl">
		<div class="row list_1">
			<div class="col-md-9">
				<div class="list_1l">
					<div class="list_1l1">
						<div class="list_1l1i row">
							<div class="col-md-8 col-sm-7">
								<div class="list_1l1il">
									<p class="font_14 mb-0">Hiển thị @ViewBag.products.Count sản phẩm</p>
								</div>
							</div>
						</div>
					</div>
					<div class="list_1l2 mt-3">
						@for (int i = 0; i < products.Count; i += 3)
						@* 						@for (int i = 0; i < products.Count; i += 3) *@
						{
							<div class="row list_2">
								@if (i < ViewBag.products.Count) //kiem tra co vuot qua so luong k :/ bug gi ma bug lam
								{
									<div class="col-md-4 col-sm-6">
										<div class="list_2i clearfix position-relative">
											<div class="list_2i1 clearfix">
												<div class="grid clearfix">
													<figure class="effect-jazz mb-0">
														<a asp-action="Detail" asp-controller="Home" asp-route-id="@ViewBag.products[i].Id">
															<img src="@ViewBag.products[i].ProductImages[0].ImgURL" class="w-100" alt="abc" width="270px" height="270px">
														</a>
													</figure>
												</div>
											</div>

											<div class="list_2i3 text-end w-100  clearfix position-absolute bottom-0">
												<ul class="mb-0 bg_dark d-inline-block p-2 px-3">
													<li class="d-inline-block mx-1"><a asp-action="Detail" asp-route-id="@ViewBag.products[i].Id" asp-controller="Home"><i class="fa fa-eye text-white"></i></a></li>
												</ul>
											</div>
										</div>
										<div class="list_2i_last mt-3 text-center clearfix">
											<h6 class="fw-bold"><a asp-action="Detail" asp-controller="Home" asp-route-id="@ViewBag.products[i].Id">@ViewBag.products[i].Name</a></h6>
											<h6 class="font_14 mb-0"><a asp-action="Detail" asp-controller="Home" asp-route-id="@ViewBag.products[i].Id">@ViewBag.products[i].Price.ToString("N0") VND</a></h6>
										</div>
									</div>
									<br>

									<br>
								}
								@if (i + 1 < ViewBag.products.Count)
								{
									<div class="col-md-4 col-sm-6">
										<div class="list_2i clearfix position-relative">
											<div class="list_2i1 clearfix">
												<div class="grid clearfix">
													<figure class="effect-jazz mb-0">
														<a asp-action="Detail" asp-controller="Home" asp-route-id="@ViewBag.products[i+1].Id">
															<img src="@ViewBag.products[i+1].ProductImages[0].ImgURL" class="w-100" width="270px" height="270px">
														</a>
													</figure>
												</div>
											</div>

											<div class="list_2i3 text-end w-100  clearfix position-absolute bottom-0">
												<ul class="mb-0 bg_dark d-inline-block p-2 px-3">
													<li class="d-inline-block mx-1"><a asp-action="Detail" asp-route-id="@ViewBag.products[i+1].Id" asp asp-controller="Home"><i class="fa fa-eye text-white"></i></a></li>
												</ul>
											</div>
										</div>
										<div class="list_2i_last mt-3 text-center clearfix">
											<h6 class="fw-bold"><a asp-action="Detail" asp-route-id="@ViewBag.products[i+1].Id" asp-controller="Home">@ViewBag.products[i + 1].Name</a></h6>
											<h6 class="font_14 mb-0"><a asp-action="Detail" asp-controller="Home" asp-route-id="@ViewBag.products[i+1].Id">@ViewBag.products[i + 1].Price.ToString("N0") VND</a></h6>
										</div>
									</div>
									<br>

									<br>
								}
								@if (i + 2 < ViewBag.products.Count)
								@* 								@if (i + 2 < ViewBag.products.Count) *@
								{
									<div class="col-md-4 col-sm-6">
										<div class="list_2i clearfix position-relative">
											<div class="list_2i1 clearfix">
												<div class="grid clearfix">
													<figure class="effect-jazz mb-0">
														<a asp-action="Detail" asp-route-id="@ViewBag.products[i+2].Id" asp-controller="Home">
															<img src="@ViewBag.products[i+2].ProductImages[0].ImgURL" class="w-100" width="270px" height="270px">
														</a>
													</figure>
												</div>
											</div>

											<div class="list_2i3 text-end w-100  clearfix position-absolute bottom-0">
												<ul class="mb-0 bg_dark d-inline-block p-2 px-3">
													<li class="d-inline-block mx-1"><a asp-action="Detail" asp-route-id="@ViewBag.products[i+2].Id" asp asp-controller="Home"><i class="fa fa-eye text-white"></i></a></li>
												</ul>
											</div>
										</div>
										<div class="list_2i_last mt-3 text-center clearfix">
											<h6 class="fw-bold"><a asp-action="Detail" asp-route-id="@ViewBag.products[i+2].Id" asp-controller="Home">@ViewBag.products[i + 2].Name</a></h6>
											@* 											<h6 class="font_14 mb-0"><a asp-action="Detail" asp-route-id="@ViewBag.products[i+2].Id" asp-controller="Home">@ViewBag.products[i + 3].Price.ToString("N0") VND</a></h6> *@
											<h6 class="font_14 mb-0"><a asp-action="Detail" asp-route-id="@ViewBag.products[i+2].Id" asp-controller="Home">@ViewBag.products[i + 2].Price.ToString("N0") VND</a></h6>
										</div>
									</div>
								}
							</div>
							<br>
						}
						@{
							var prevDisabled = !products.PreviousPage ? "disabled" : "";
							var nextDisabled = !products.NextPage ? "disabled" : "";
						}
						<div class="pages mt-4 row text-center">
							<div class="col-md-12">
								<ul class="mb-0">
									<li>
										<a class="@nextDisabled" asp-action="Shop" asp-controller="Home" asp-route-pageNumber="@(products.PageIndex - 1)"
										   type="button">
											<i class="fa fa-chevron-left"></i>
										</a>
									</li>
									<li>
										<a asp-action="Shop" asp-controller="Home" asp-route-pageNumber="@(products.PageIndex + 1)"
										   type="button" class="@nextDisabled">
											<i class="fa fa-chevron-right"></i>
										</a>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col-md-3">
				<div class="list_1r">
					@* tìm kiếm sản phẩm *@
					<form asp-action="Search" asp-controller="Home">
						<div class="input-group">
							<input type="text" class="form-control border-0 rounded-0 font_12 bg-transparent" placeholder="Nhập tên sản phẩm" name="query">
							<span class="input-group-btn">
								<button class="btn btn-primary bg-transparent border-0 rounded-0" type="submit">
									<i class="fa fa-search col_red"></i>
								</button>
							</span>
						</div>
					</form>

					<div class="list_1r1 shadow_box p-3 mt-4">
						<h5 class="mb-3">Danh mục sản phẩm</h5>
						@foreach (var category in ViewBag.categories)
						{
							<h6 class="font_14">
								<a a asp-action="Shop" asp-route-id="@category.Id" asp-controller="Home">@category.Name</a>
							</h6>
						}
					</div>
					<div class="list_1r1 shadow_box p-3 mt-4">
						<h5 class="mb-3">Sản phẩm bán chạy</h5>
						@if (ViewBag.Top3Seller != null)
						{
							@foreach (var product in ViewBag.Top3Seller)
							{
								<div class="list_1r1i row">
									<div class="col-md-4 pe-0 col-sm-4">
										<div class="list_1r1il">
											<div class="grid clearfix">
												<figure class="effect-jazz mb-0">
													<a asp-action="Detail" asp-controller="Home" asp-route-id="@product.Id"><img src="@product.ProductImages[0].ImgURL" class="w-100" alt="abc" ></a>
												</figure>
											</div>
										</div>
									</div>
									<div class="col-md-8 col-sm-8">
										<div class="list_1r1ir">
											<h6 class="fw-bold mb-1 font_12"><a asp-action="Detail" asp-controller="Home" asp-route-id="@product.Id">@product.Name</a></h6>
											<h6 class="mb-0 mt-1 font_12 fw-bold">@product.Price.ToString("N0") VND</h6>
										</div>
									</div>
								</div>

								<hr>
							}
						}

					</div>
					<div class="list_1r1  mt-4">
					</div>
					<div class="list_1r1 shadow_box p-3 mt-4">
						<h5 class="mb-3">Liên hệ</h5>
						<div class="input-group">
							<input type="text" class="form-control border-0 rounded-0 font_12 bg-transparent" placeholder="Email của bạn">
							<span class="input-group-btn">
								<button class="btn btn-primary bg-transparent border-0 rounded-0" type="button">
									<i class="fa fa-envelope col_red"></i>
								</button>
							</span>
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>
</section>