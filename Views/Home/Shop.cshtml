								<div class="list_1r1il">
									<div class="grid clearfix">
										<figure class="effect-jazz mb-0">
											<a asp-action="Detail" asp-controller="Home"><img src="/user/img/9.jpg" class="w-100" alt="abc"></a>
										</figure>
									</div>
								</div>
							</div>
							<div class="col-md-8 col-sm-8">
								<div class="list_1r1ir">
									<h6 class="fw-bold mb-1 font_12"><a asp-action="Detail" asp-controller="Home">Quần Jean Nam Taper Fit MJE 1019</a></h6>
									<h6 class="mb-0 mt-1 font_12 fw-bold">98 VND</h6>
								</div>
							</div>
						</div><hr>
					</div>
					<div class="list_1r1  mt-4">
