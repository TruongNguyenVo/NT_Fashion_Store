@model IEnumerable<doan1_v1.Models.Order>

@{
    ViewData["Title"] = "Quản lý hóa đơn";
    var invoices = ViewBag.Invoices;
}
<div class="page-inner">
            <div class="page-header">
              <h3 class="fw-bold mb-3">NTMFashion</h3>
              <ul class="breadcrumbs mb-3">
                <li class="nav-home">
                  <a href="#">
                    <i class="icon-home"></i>
                  </a>
                </li>
                <li class="separator">
                  <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                  <a href="#">Quản lý</a>
                </li>
                <li class="separator">
                  <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                  <a href="#">@ViewData["Title"]</a>
                </li>
              </ul>
            </div>
            <div class="row">

              <div class="col-md-12">
                <div class="card">
                  <div class="card-header">
                    <div class="d-flex align-items-center">
                      <h4 class="card-title">Thông tin hóa đơn</h4>
                      
                    <!-- form them -->
                    <div class="modal fade" id="addRowModal" tabindex="-1" aria-labelledby="newRowModalLabel" aria-hidden="true">
                      <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title" id="newRowModalLabel">Thêm thông tin sản phẩm</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                          </div>
                          <div class="modal-body">
                            <form action="">
                              <div class="mb-3">
                              <label class="form-label" for="">Lý do hủy hóa đơn</label>
                              <input class="form-control" type="text" name="" id="">
                              </div>
                            
                          <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                            <button type="submit" class="btn btn-danger" >Hủy hóa đơn</button>
                          </div>
                        </form>
                        </div>
                      </div>
                    </div>
                    </div>
                  </div>
                  <div class="card-body">
                    <!-- Modal -->
                    <div
                      class="modal fade"
                      id="addRowModal"
                      tabindex="-1"
                      role="dialog"
                      aria-hidden="true"
                    >

                    </div>
                    <!-- table -->
                    <div class="table-responsive">
                      <table
                        id="add-row"
                        class="display table table-striped table-hover"
                      >
                        <thead>
                          <tr>
                            <th>Tên khách hàng</th>
                            <th>Ngày đặt</th>
                            <th>Ngày thanh toán</th>
                            <th>Trạng thái</th>
                            <th>Tổng tiền</th>
                            <th>Số điện thoại</th>
                            <th style="width: 10%">Thao tác</th>
                          </tr>
                        </thead>
                        <tfoot>
                          <tr>
                            <th>Tên khách hàng</th>
                            <th>Ngày đặt</th>
                            <th>Ngày thanh toán</th>
                            <th>Trạng thái</th>
                            <th>Tổng tiền</th>
                            <th>Số điện thoại</th>
                            <th style="width: 10%">Thao tác</th> 
                          </tr>
                        </tfoot>
                        <tbody>                         
                            @foreach(var invoice in invoices){
                          <tr>
                            <td>@invoice.Customer.FullName</td>
                                            <td>@invoice.DateOrder</td>
                                            <td>@invoice.DateReceive</td>
                                            <td>@invoice.Status</td>
                            <td>
                                                @{
                                                    var otherCost = invoice.OtherCost;
                                                    if (otherCost == null)
                                                    {
                                                        otherCost = 0;
                                                    }
                                                    var totalPrice = 0.0;
                                                    // tong phi van chuyen va phi khac
                                                    totalPrice = invoice.DeliveryCost + otherCost;
                                                    //tong tat ca cac gia cua cac product
                                                    foreach (var detailOrder in invoice.OrderProductDetails)
                                                    {
                                                        totalPrice = totalPrice + (detailOrder.Quantity * detailOrder.PriceSale);
                                                    }
                                                }
                                                @totalPrice.ToString("N0")
                            </td>
                            <td>@invoice.Customer.PhoneNumber</td>
                            <td>
                              <div class="form-button-action">
                                <!-- view -->
                                <a asp-action="Details" asp-route-id="@invoice.Id"
                                type="button"
                                title="Xem chi tiết hóa đơn"
                                class="btn btn-link btn-primary btn-lg"
                              >
                                <i class="fa fa-eye"></i>
                              </a>
                                <!-- delete -->
                                <a
                                  asp-action="Delete" asp-route-id="@invoice.Id"
                                  title="Hủy hóa đơn"
                                   class="btn btn-link btn-danger btn-lg">
                                  <i class="fa fa-times"></i>
                                </a>
                              </div>
                            </td>
                          </tr>
                                    }
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

