@model doan1_v1.Models.Product

@{
    ViewData["Title"] = "Create";
}
<div class="page-inner">
    <div class="page-header">
        <h3 class="fw-bold mb-3">NTMFashion</h3>
        <ul class="breadcrumbs mb-3">
            <li class="nav-home">
                <a href="#">
                    <i class="icon-home"></i>
                </a>
            </li>
            <li class="separator">
                <i class="icon-arrow-right"></i>
            </li>
            <li class="nav-item">
                <a href="#">Quản lý</a>
            </li>
            <li class="separator">
                <i class="icon-arrow-right"></i>
            </li>
            <li class="nav-item">
                <a href="#">Quản lý sản phẩm</a>
            </li>
        </ul>
    </div>

<form asp-action="Create">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Tên sản phẩm</label>
        <input type="text" class="form-control" id="name" asp-for="Name" placeholder="Nhập tên sản phẩm">
    </div>
    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label">Danh mục</label>
            <select class="form-select" asp-for="CategoryId" asp-items="ViewBag.Categories">
                <option value="">--Chọn danh mục--</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for= "Color" class="form-label">Màu sắc</label>
        <input type="text" class="form-control" asp-for="Color" placeholder="Nhập màu sắc">
    </div>
    <div class="mb-3">
        <label asp-for="Dimension" class="form-label">Kích thước</label>
        <input type="text" class="form-control" asp-for="Dimension" placeholder="Nhập kích thước">
    </div>
    <div class="mb-3">
        <label asp-for="Material" class="form-label">Chất liệu</label>
            <input type="text" class="form-control" asp-for="Material" placeholder="Nhập chất liệu">
    </div>
    <div class="mb-3">
        <label asp-for="Quantity" class="form-label">Số lượng</label>
        <input type="number" min=0 class="form-control" asp-for="Quantity" placeholder="Nhập số lượng">
    </div>
    <div class="mb-3">
        <label asp-for="Price" class="form-label">Giá</label>
        <input type="number" min=0 class="form-control" asp-for="Price" placeholder="Nhập giá">
    </div>
    <div class="mb-3">
        <label asp-for="Productor" class="form-label">Nhà sản xuất</label>
        <input type="number" class="form-control" asp-for="Productor" placeholder="Nhập nhà sản xuất">
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label">Mô tả</label>
        <textarea class="form-control" rows="3" asp-for="Description" id="">
                                </textarea>
    </div>
    <div class="mb-3">
        <input type="file" name="files" class="form-control" multiple />
    </div>
    <div class="modal-footer">
            <a type="button" class="btn btn-secondary" asp-action="Index">Đóng</a>
        <button type="submit" class="btn btn-primary">Thêm</button>
    </div>
</form>




