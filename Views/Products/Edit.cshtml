@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <!-- Script xử lý hình ảnh xem trước và xóa ảnh -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const fileInput = document.querySelector('input[type="file"][name="files"]');
            const imagePreview = document.getElementById('imagePreview');

            if (fileInput) {
                fileInput.addEventListener('change', function (event) {
                    const files = event.target.files;
                    imagePreview.innerHTML = ''; // Xóa hình ảnh cũ

                    for (const file of files) {
                        if (file.type.startsWith('image/')) {
                            const reader = new FileReader();
                            reader.onload = function (e) {
                                const imgContainer = document.createElement('div'); // Container cho ảnh và nút xóa
                                imgContainer.style.position = 'relative';
                                imgContainer.style.display = 'inline-block';
                                imgContainer.style.margin = '10px';

                                const img = document.createElement('img');
                                img.src = e.target.result;
                                img.style.maxWidth = '150px';
                                imgContainer.appendChild(img);

                                // Tạo nút xóa
                                const removeBtn = document.createElement('button');
                                removeBtn.innerText = 'Xóa';
                                removeBtn.style.position = 'absolute';
                                removeBtn.style.top = '5px';
                                removeBtn.style.right = '5px';
                                removeBtn.style.backgroundColor = '#ff0000';
                                removeBtn.style.color = '#fff';
                                removeBtn.style.border = 'none';
                                removeBtn.style.padding = '5px';
                                removeBtn.style.cursor = 'pointer';

                                // Xử lý khi nhấn nút xóa
                                removeBtn.addEventListener('click', function () {
                                    imgContainer.remove(); // Xóa ảnh khỏi div preview
                                });

                                imgContainer.appendChild(removeBtn);
                                imagePreview.appendChild(imgContainer);
                            }
                            reader.readAsDataURL(file);
                        } else {
                            alert('Chỉ có thể tải lên file ảnh!');
                        }
                    }
                });
            }
        });
    </script>
