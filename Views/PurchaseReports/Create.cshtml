            <span asp-validation-for="Note" class="text-danger"></span>
                </div>
                <div class="mb-3-md">
                  <a asp-action="Index" class="btn btn-danger">Hủy</a>
                  <button type="submit" value="Create" class="btn btn-primary">Tạo</button>
                </div>
           
          </form>
          </div>


