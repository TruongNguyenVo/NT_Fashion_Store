@model doan1_v1.Models.Supplier

@{
    ViewData["Title"] = "Xóa nhà cung cấp";

}
<div class="page-inner">
    <div class="page-header">
        <h3 class="fw-bold mb-3">NTFashion</h3>
        <ul class="breadcrumbs mb-3">
            <li class="nav-home">
                <a href="#">
                    <i class="icon-home"></i>
                </a>
            </li>
            <li class="separator">
                <i class="icon-arrow-right"></i>
            </li>
            <li class="nav-item">
                <a href="/">Quản lý</a>
            </li>
            <li class="separator">
                <i class="icon-arrow-right"></i>
            </li>
            <li class="nav-item">
                <a href="#">Quản lý nhà cung cấp</a>
            </li>
        </ul>
    </div>
    <form class="row" asp-action="Delete">
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Tên nhà cung cấp</label>
            <input disabled type="text" class="form-control" id="name" asp-for="Name">
        </div>
        <div class="mb-3">
            <label asp-for="Address" class="form-label">Địa chỉ</label>
            <input disabled type="text" class="form-control" id="name" asp-for="Address">
        </div>
        <div class="mb-3">
            <label asp-for="Phone" class="form-label">Số điện thoại</label>
            <input disabled type="text" class="form-control" id="name" asp-for="Phone">
        </div>
        <div class="mb-3-md">
            <a type="button" asp-action="Index" class="btn btn-primary">Hủy</a>
            <button type="submit" value="Delete" class="btn btn-danger">Xóa</button>
        </div>

    </form>
</div>
